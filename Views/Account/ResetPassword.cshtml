@model LapTrinhWebBanHang.Models.User
@{
    ViewBag .Title = "Đặt Lại Mật Khẩu";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="main">
    <div class="container row" id="container">
        <div class="form-container reset-password-container col-md-6">
            <form asp-controller="Account" asp-action="ResetPassword" method="post">
                <h6> Đặt Lại Mật Khẩu</h6>
                <p> Vui lòng nhập mật khẩu mới của bạn.</p>
                <span> Mật khẩu mới</span>
                <input type="password" placeholder="Mật khẩu mới" name="newPassword" id="newPassword" required />
                <span> Xác nhận mật khẩu mới</span>
                <input type="password" placeholder="Xác nhận mật khẩu mới" name="confirmPassword" id="confirmPassword" required />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div style="color: red;">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))

                        {
                            <p>@error.ErrorMessage</p>
                        }

                    </div>
                }

                <div class="container-btn">
                    <button class="btn-reset-password"> <i class="fa-solid fa-key"> </i> Đặt lại mật khẩu </button>
                    @Html.ActionLink("Quay lại", "ForgetPassword", "Account", new { @class = "support" })
                </div>
            </form>
        </div>
    </div>
</div>
