
@{
    ViewBag.Title = "CagtegoryPage";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/Category_page/container_category.css" />

<div class="container-content">
    <div class="slide">
        <img src="https://bizweb.dktcdn.net/100/108/842/collections/giay-bong-da-dinh-thap-tf.jpg?v=1499702390127" alt="" />
    </div>
    <div class="link-option">
        <span>Giày bóng đá sân cỏ nhân tạo</span>
        <hr />
    </div>
    <div class="content row">
        <div class="content-left col-md-2">
            <div class="side-bar">
                <div class="product-size">
                    <h4 onclick="toggleSection('size-section')">Kích thước <i class="fa-solid fa-angle-down"></i></h4>
                    <ul id="size-section">
                        <li class="style-everyList"><input type="checkbox" />35</li>
                        <li class="style-everyList"><input type="checkbox" />36</li>
                        <li class="style-everyList"><input type="checkbox" />37</li>
                        <li class="style-everyList"><input type="checkbox" />38</li>
                        <li class="style-everyList"><input type="checkbox" />39</li>
                        <li class="style-everyList"><input type="checkbox" />40</li>
                        <li class="style-everyList"><input type="checkbox" />41</li>
                        <li class="style-everyList"><input type="checkbox" />42</li>
                        <li class="style-everyList"><input type="checkbox" />43</li>
                        <li class="style-everyList"><input type="checkbox" />44</li>
                        <li class="style-everyList"><input type="checkbox" />45</li>
                    </ul>
                </div>

                <!-- Chủng loại -->
                <div class="product-type">
                    <h4 onclick="toggleSection('type-section')">Chủng loại <i class="fa-solid fa-angle-down"></i></h4>
                    <ul id="type-section">
                        <li class="style-everyList"><input type="checkbox" />ĐINH TF</li>
                        <li class="style-everyList"><input type="checkbox" />ĐINH FG</li>
                    </ul>
                </div>

                <!-- Thương hiệu -->
                <div class="product-brands">
                    <h4 onclick="toggleSection('brands-section')">Thương hiệu <i class="fa-solid fa-angle-down"></i></h4>
                    <ul id="brands-section">
                        <li class="style-everyList"><input type="checkbox" />NIKE</li>
                        <li class="style-everyList"><input type="checkbox" />ADIDAS</li>
                        <li class="style-everyList"><input type="checkbox" />PUMA</li>
                        <li class="style-everyList"><input type="checkbox" />MIZUNO</li>
                    </ul>
                </div>

                <!-- Mức giá -->
                <div class="product-price">
                    <h4 onclick="toggleSection('price-section')">Mức giá <i class="fa-solid fa-angle-down"></i></h4>
                    <ul id="price-section">
                        <li class="style-everyList"><input type="checkbox" />Trên 500K</li>
                        <li class="style-everyList"><input type="checkbox" />500k - 1tr</li>
                        <li class="style-everyList"><input type="checkbox" />1tr - 2tr</li>
                        <li class="style-everyList"><input type="checkbox" />Trên 2tr</li>
                    </ul>
                </div>

                <!-- Màu sắc -->
                <div class="product-color">
                    <h4 onclick="toggleSection('color-section')">Màu sắc <i class="fa-solid fa-angle-down"></i></h4>
                    <ul id="color-section">
                    </ul>
                </div>
            </div>
        </div>
        <div class="content-right col-md-10">
            <h3 style="text-align: center;">Có ... sản phẩm</h3>
            <div class="arrange">
                <select name="arrange" id="arrange">
                    <option value="">Sắp xếp</option>
                    <option value="">A -> Z</option>
                    <option value="">Z -> A</option>
                    <option value="">Giá tăng dần</option>
                    <option value="">Giá giảm dần</option>
                    <option value="">Hàng mới nhất</option>
                    <option value="">Hàng cũ nhất</option>
                </select>
            </div>
            <div class="container-products row">
                <div class="product-item col-xl-3 col-lg-4 sol-sm-4 col-6">
                    <div class="product-image">
                        <img src="https://static.nike.com/a/images/c_limit,w_592,f_auto/t_product_v1/5856a35a-fed0-476a-9b97-491356dc5c95/ZM+SUPERFLY+10+ELITE+F+FG.png" alt="" />
                    </div>
                    <div class="product-content">
                        <h6>Nike Air Zoom Mercurial Vapor 16 Pro TF</h6>
                        <p class="description-product">Pink Foam/Black</p>
                        <p class="price">2,150,000</p>
                    </div>
                </div>
                <div class="product-item col-xl-3 col-lg-4 sol-sm-4 col-6">
                    <div class="product-image">
                        <img src="https://static.nike.com/a/images/c_limit,w_592,f_auto/t_product_v1/5856a35a-fed0-476a-9b97-491356dc5c95/ZM+SUPERFLY+10+ELITE+F+FG.png" alt="" />
                    </div>
                    <div class="product-content">
                        <h6>Nike Air Zoom Mercurial Vapor 16 Pro TF</h6>
                        <p class="description-product">Pink Foam/Black</p>
                        <p class="price">2,150,000</p>
                    </div>
                </div>
                <div class="product-item col-xl-3 col-lg-4 sol-sm-4 col-6">
                    <div class="product-image">
                        <img src="https://static.nike.com/a/images/c_limit,w_592,f_auto/t_product_v1/5856a35a-fed0-476a-9b97-491356dc5c95/ZM+SUPERFLY+10+ELITE+F+FG.png" alt="" />
                    </div>
                    <div class="product-content">
                        <h6>Nike Air Zoom Mercurial Vapor 16 Pro TF</h6>
                        <p class="description-product">Pink Foam/Black</p>
                        <p class="price">2,150,000</p>
                    </div>
                </div>
                <div class="product-item col-xl-3 col-lg-4 sol-sm-4 col-6">
                    <div class="product-image">
                        <img src="https://static.nike.com/a/images/c_limit,w_592,f_auto/t_product_v1/5856a35a-fed0-476a-9b97-491356dc5c95/ZM+SUPERFLY+10+ELITE+F+FG.png" alt="" />
                    </div>
                    <div class="product-content">
                        <h6>Nike Air Zoom Mercurial Vapor 16 Pro TF</h6>
                        <p class="description-product">Pink Foam/Black</p>
                        <p class="price">2,150,000</p>
                    </div>
                </div>
            </div>
            <div class="number-list">
                <ul>
                    <li><<</li>
                    <li>1</li>
                    <li>2</li>
                    <li>3</li>
                    <li>4</li>
                    <li>>></li>
                </ul>
            </div>
        </div>
    </div>
</div>

