@model LapTrinhWebBanHang.Models.AddressUserViewModel

@{
    ViewBag.Title = "Thông tin";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/UserAddress/UserAddress.css" />
<div class="container">
    <div class="row">
        <div class="col-lg-7 info">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            @using (Html.BeginForm("Update", "UserAddresss", FormMethod.Post, new { @class = "form-info row" }))
            {
                <h2>Thông tin cá nhân</h2>
                @Html.AntiForgeryToken()

                <div class="form-group col-md-6">
                    <label class="control-label">Họ tên</label>
                    @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FullName)
                </div>


                <div class="form-group col-md-6">
                    <label class="control-label">Số điện thoại</label>
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Phone)
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label">Tỉnh, thành phố</label>
                    @Html.TextBoxFor(model => model.Province, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Province)
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label">Quận, huyện, thị trấn</label>
                    @Html.TextBoxFor(model => model.Town, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Town)
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label">Phường, xã, ấp</label>
                    @Html.TextBoxFor(model => model.Block, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Block)
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label">Số nhà</label>
                    @Html.TextBoxFor(model => model.SpecificAddress, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SpecificAddress)
                </div>
                <button type="submit" class="btn btn-primary">Cập nhật thông tin</button>

                @Html.ActionLink("Quay lại trang chủ", "Home_page", "HomePage")
            }
        </div>
        <div class="col-lg-4 info-account">
            <form class="form-email">
                <h2>Thông tin tài khoản</h2>
                <label>Email</label>
                <input class="form-control" type="text" value="@ViewBag.UserEmail" readonly />
                <a href="@Url.Action("ChangePassword", "Account")" class="btn">
                    Đổi mật khẩu
                </a>
            </form>
        </div>
    </div>
    <!-- Hiển thị thông báo nếu chưa có thông tin -->
    @if (Model.FullName == "" && Model.Phone == "" && Model.Province == "" && Model.Town == "" && Model.Block == "" && Model.SpecificAddress == "")
    {
        <div class="alert alert-warning">
            Không có thông tin địa chỉ. Vui lòng cập nhật thông tin.
        </div>
    }
</div>