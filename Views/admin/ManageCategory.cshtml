@model IEnumerable<LapTrinhWebBanHang.Models.Category>
@{
    ViewBag.Title = "Dashboard";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>

<div class="container mt-5">
    <h2 class="mb-4">Quản lý loại sản phẩm</h2>


    <!-- Modal để thêm loại sản phẩm mới -->
    <div class="modal fade" id="createCategoryModal" tabindex="-1" aria-labelledby="createCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createCategoryModalLabel">Thêm Loại Sản Phẩm</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("CreateCategory", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <!-- Thêm mb-3 để tạo khoảng cách dưới -->
                            @Html.Label("CategoryName", "Category Name", new { @class = "form-label" })
                            @Html.TextBox("CategoryName", null, new { @class = "form-control", placeholder = "Enter new category name" })
                            @Html.ValidationMessage("CategoryName", "", new { @class = "text-danger" })
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <input type="submit" value="Thêm" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


    <!-- Modal để chỉnh sửa loại sản phẩm -->
    <div class="modal fade" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editCategoryModalLabel">Chỉnh Sửa Loại Sản Phẩm</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("EditCategory", "Admin", FormMethod.Post, new { id = "editCategoryForm" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("CategoryID", "", new { id = "editCategoryID" }) <!-- Ẩn ID của Category -->

                        <div class="mb-3">
                            @Html.Label("CategoryName", "Category Name", new { @class = "form-label" })
                            @Html.TextBox("CategoryName", null, new { @class = "form-control", id = "editCategoryName" })
                            @Html.ValidationMessage("CategoryName", "", new { @class = "text-danger" })
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <input type="submit" value="Lưu" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Bảng hiển thị danh sách loại sản phẩm -->
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().CategoryID)</th>
                <th>@Html.DisplayNameFor(model => model.First().CategoryName)</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <button type="button" class="btn btn-primary editCategoryBtn" data-id="@item.CategoryID">
                            <i class="bi bi-pencil-square"></i> Sửa Tên Loại Sản Phẩm
                        </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Nút quay lại trang quản lý sản phẩm -->
    <div class="mt-3">
        @Html.ActionLink("Back to ManageProducts", "ManageProducts", null, new { @class = "btn btn-secondary" })
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Khi nhấn vào nút "Sửa Tên Loại Sản Phẩm"
            $(".editCategoryBtn").click(function () {
                var categoryId = $(this).data("id");

                // Gửi yêu cầu AJAX để lấy dữ liệu của Category
                $.ajax({
                    url: '@Url.Action("GetCategoryById", "Admin")', // Action trong Controller
                    type: "GET",
                    data: { id: categoryId },
                    success: function (data) {
                        if (data) {
                            // Điền dữ liệu vào modal
                            $("#editCategoryID").val(data.CategoryID);
                            $("#editCategoryName").val(data.CategoryName);

                            // Mở modal chỉnh sửa
                            $("#editCategoryModal").modal("show");
                        } else {
                            alert("Không tìm thấy dữ liệu danh mục.");
                        }
                    },
                    error: function () {
                        alert("Có lỗi xảy ra khi lấy dữ liệu danh mục.");
                    }
                });
            });
        });
    </script>
}
