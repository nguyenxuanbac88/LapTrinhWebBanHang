@model IEnumerable<LapTrinhWebBanHang.Models.Category>

@{ Layout = null; }
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<div class="container mt-5">
    <h2 class="mb-4">Quản lý loại sản phẩm</h2>

    <p>
        <a href="@Url.Action("CreateCategory", "Admin")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm loại sản phẩm
        </a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().CategoryID)</th>
                <th>@Html.DisplayNameFor(model => model.First().CategoryName)</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>@item.CategoryID</td> <!-- Hiển thị ID hoặc tên danh mục, tùy theo yêu cầu -->
    <td>@item.CategoryName</td>
    <td>
        <a href="@Url.Action("EditCategory", "Admin", new { id = item.CategoryID })" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Sửa Tên Loại Sản Phẩm
        </a>
    </td>
</tr>}
        </tbody>
    </table>

    <div class="mt-3">
        @Html.ActionLink("Back to ManageProducts", "ManageProducts", null, new { @class = "btn btn-secondary" })
    </div>
</div>