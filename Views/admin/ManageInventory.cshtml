@model IEnumerable<LapTrinhWebBanHang.Models.InventoryAddStockViewModel>

@{
    Layout = "~/Views/admin/Shared/_MasterLayout.cshtml";
}

<!-- Liên kết Font Awesome và CSS của Bootstrap 5 -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2>Quản Lý Tồn Kho</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID Sản Phẩm</th>
            <th>ProductStockID</th> <!-- Thêm cột ProductStockID -->
            <th>Tên Sản Phẩm</th>
            <th>Ảnh Chính</th>
            <th>Size</th>
            <th>Màu Sắc</th>
            <th>Kho Hiện Tại</th>

            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductStockID</td> <!-- Hiển thị ProductStockID -->
                <td>@item.ProductName</td>
                <td>
                    <img src="~/Image/product-image/@item.MainImageUrl" style="max-width: 50px; height: auto;" />
                </td>
                <td>@item.Size</td>
                <td>@item.Color</td>
                <td>@item.StockQuantity</td>
                <td>
                    <!-- Nút để mở popup nhập kho -->
                    <button type="button" class="btn btn-success btn-sm" onclick="openAddStockPopup(@item.ProductStockID)">
                        Nhập Kho
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Modal Popup cho nhập kho -->
<div class="modal fade" id="addStockModal" tabindex="-1" aria-labelledby="addStockModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addStockModalLabel">Nhập kho</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Nội dung form nhập kho sẽ được tải động từ AJAX -->
            </div>
        </div>
    </div>
</div>

<!-- jQuery và Bootstrap Bundle JS (bao gồm Popper.js) -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
// Hàm mở popup nhập kho và tải nội dung từ server
function openAddStockPopup(productStockID) {
    $.ajax({
        url: '@Url.Action("AddStock", "admin")',
        data: { id: productStockID },  // Truyền chỉ ProductStockID
        success: function (result) {
            $('#addStockModal .modal-body').html(result);  // Chèn nội dung vào modal
            $('#addStockModal').modal('show');  // Hiển thị modal
        },
        error: function () {
            alert("Không Tải Nội Dung");
        }
    });
}

$(document).on('submit', '#addStockForm', function (e) {
    e.preventDefault();  // Ngăn form submit thông thường

    $.ajax({
        type: 'POST',
        url: $(this).attr('action'),  // Kiểm tra lại URL
        data: $(this).serialize(),    // Gửi dữ liệu form
        success: function (response) {
            if (response.success) {
                $('#addStockModal').modal('hide');
                location.reload();  // Tải lại trang để cập nhật dữ liệu
            } else {
                $('#addStockModal .modal-body').html(response.message || "Có lỗi xảy ra, vui lòng thử lại.");
            }
        },
        error: function () {
            alert("Đã xảy ra lỗi khi gửi dữ liệu.");
        }
    });
});

</script>
