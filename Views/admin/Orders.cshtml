@model LapTrinhWebBanHang.Models.ProductViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/admin/Shared/_MasterLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.bootstrap4.min.css">
</head>
<body>

    <div class="mb-3 row">
        <div class="col-md-2">
            <label for="type" class="form-label">Loại</label>
            <select name="type" id="filterType" class="form-control">
                <option value="">Tất cả</option>
                <option value="NIKE">NIKE</option>
                <option value="ADIDAS">ADIDAS</option>
                <option value="PUMA">PUMA</option>
                <option value="ÁO ĐẤU">ÁO ĐẤU</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="status" class="form-label">Trạng Thái</label>
            <select name="status" id="filterStatus" class="form-control">
                <option value="">Tất cả</option>
                <option value="Đã Thanh Toán">Đã Thanh Toán</option>
                <option value="Chờ Thanh Toán">Chờ Thanh Toán</option>
                <option value="Đã Huỷ">Đã Huỷ</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="username" class="form-label">Tài khoản</label>
            <input type="text" class="form-control" id="filterUsername" name="username" placeholder="Nhập tài khoản">
        </div>
        <div class="col-md-2">
            <label for="start_date" class="form-label">Ngày bắt đầu</label>
            <input type="date" class="form-control" id="filterStartDate" name="start_date">
        </div>
        <div class="col-md-2">
            <label for="end_date" class="form-label">Ngày kết thúc</label>
            <input type="date" class="form-control" id="filterEndDate" name="end_date">
        </div>
        <div class="col-md-2 text-center">
            <label for="total_amount" class="form-label">Tổng Tiền</label>
            <input type="text" class="form-control" id="total_amount" name="total_amount" disabled placeholder="1.530.120">
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" id="filterButton">Lọc dữ liệu</button>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lịch Sử Đơn Hàng</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tài Khoản</th>
                            <th>Mã Đơn Hàng</th>
                            <th>Loại</th>
                            <th>Địa chỉ</th>
                            <th>Số Điện Thoại</th>
                            <th>Tổng Tiền</th>
                            <th>Trạng Thái</th>
                            <th>Thời Gian</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>user01</td>
                            <td>ORD001</td>
                            <td>NIKE</td>
                            <td>123 Đường ABC, TP.HCM</td>
                            <td>0123456789</td>
                            <td>1.200.000</td>
                            <td>Đã Thanh Toán</td>
                            <td>2023-11-10</td>
                            <td>
                                <button class="btn btn-primary btn-sm">Chi tiết</button>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>user02</td>
                            <td>ORD002</td>
                            <td>ADIDAS</td>
                            <td>456 Đường XYZ, Hà Nội</td>
                            <td>0987654321</td>
                            <td>1.500.000</td>
                            <td>Chờ Thanh Toán</td>
                            <td>2022-11-11</td>
                            <td>
                                <button class="btn btn-primary btn-sm">Chi tiết</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.bootstrap4.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>

        <script>
            $(document).ready(function () {
                // Khởi tạo DataTable với nút Xuất ra Excel
                var table = $('#dataTable').DataTable({
                    "paging": true,
                    "pageLength": 5,
                    "lengthMenu": [5, 10, 20, 50],
                    "language": {
                        "lengthMenu": "Hiển thị _MENU_ dòng mỗi trang",
                        "zeroRecords": "Không tìm thấy dữ liệu phù hợp",
                        "info": "Hiển thị _START_ đến _END_ của _TOTAL_ dòng",
                        "infoEmpty": "Không có dữ liệu",
                        "infoFiltered": "(lọc từ _MAX_ tổng số dòng)",
                        "paginate": {
                            "first": "Đầu",
                            "last": "Cuối",
                            "next": "Sau",
                            "previous": "Trước"
                        }
                    },
                    dom: 'Bfrtip', // Thêm phần điều khiển cho các nút
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            text: 'Xuất ra Excel',
                            className: 'btn btn-success mb-3', // Thêm lớp CSS cho nút
                            title: 'LichSuDonHang', // Tên file xuất ra
                            exportOptions: {
                                columns: ':visible' // Chỉ xuất các cột hiển thị
                            }
                        }
                    ]
                });

                // Hàm lọc dữ liệu
                $('#filterButton').on('click', function () {
                    var type = $('#filterType').val();
                    var status = $('#filterStatus').val();
                    var username = $('#filterUsername').val().toLowerCase();
                    var startDate = $('#filterStartDate').val();
                    var endDate = $('#filterEndDate').val();

                    // Áp dụng bộ lọc vào bảng DataTable
                    table.columns(3).search(type);       // Lọc cột Loại
                    table.columns(7).search(status);     // Lọc cột Trạng Thái
                    table.columns(1).search(username);   // Lọc cột Tài Khoản

                    // Lọc theo ngày
                    table.draw();
                });

                // Custom filter for date range
                $.fn.dataTable.ext.search.push(
                    function (settings, data, dataIndex) {
                        var min = $('#filterStartDate').val();
                        var max = $('#filterEndDate').val();
                        var date = data[8]; // Cột Thời Gian

                        if ((min === "" && max === "") ||
                            (min === "" && date <= max) ||
                            (min <= date && max === "") ||
                            (min <= date && date <= max)) {
                            return true;
                        }
                        return false;
                    }
                );

                $('#filterStartDate, #filterEndDate').on('change', function () {
                    table.draw();
                });
            });
        </script>
    }
</body>
</html>
