@model IEnumerable<LapTrinhWebBanHang.Models.Product>

@{ Layout = null;  }
<h2>Quản lý sản phẩm</h2>

<p>
    <a href="@Url.Action("CreateProducts", "Admin")" class="btn btn-success">Thêm sản phẩm mới</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.CategoryID)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.CategoryID</td> <!-- Nếu có bảng Categories, hiển thị tên danh mục thay vì ID -->
                <td>
                    <a href="@Url.Action("EditProducts", "Admin", new { id = item.ProductID })" class="btn btn-primary">Sửa</a>
                    <a href="@Url.Action("DeleteProducts", "Admin", new { id = item.ProductID })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
