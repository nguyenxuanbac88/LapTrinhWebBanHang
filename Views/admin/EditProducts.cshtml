@model LapTrinhWebBanHang.Models.Product
@{ Layout = null; }
<h2>Chỉnh sửa sản phẩm</h2>

@using (Html.BeginForm("EditProducts", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ProductID)

    <div class="form-group">
        @Html.LabelFor(model => model.ProductName)
        @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", rows = 4 } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImageURL)
        @Html.EditorFor(model => model.ImageURL, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryID)
        @Html.DropDownList("CategoryID", (SelectList)ViewBag.Categories, "Chọn danh mục", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
}
