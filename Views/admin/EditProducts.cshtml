@model LapTrinhWebBanHang.Models.ProductViewModel
@{
    Layout = "~/Views/admin/Shared/_MasterLayout.cshtml";
}
<h2>Chỉnh sửa sản phẩm</h2>

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @using (Html.BeginForm("EditProducts", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.Product.ProductID)

        <div>
            <label>Product Name</label>
            @Html.TextBoxFor(m => m.Product.ProductName, new { @class = "form-control" })
        </div>

        <div>
            <label>Price</label>
            @Html.TextBoxFor(m => m.Product.Price, new { @class = "form-control" })
        </div>

        <div>
            <label>Description</label>
            @Html.TextAreaFor(m => m.Product.Description, new { @class = "form-control", rows = 4 })
        </div>

        <div>
            <label>Category</label>
            @Html.DropDownList("Product.CategoryID", ViewBag.Categories as SelectList, "-- Select Category --", new { @class = "form-control" })
        </div>

        <div>
            <label>Image (Main)</label>
            <input type="file" name="ImageFile" class="form-control" />
        </div>

        <div>
            <label>Additional Images</label>
            <input type="file" name="AdditionalImages" multiple="multiple" class="form-control" />
        </div>

        <div>
            <label>Color</label>
            @Html.DropDownListFor(m => m.SelectedColorID, new SelectList(Model.Colors, "ColorID", "ColorName"), "-- Select Color --", new { @class = "form-control" })
        </div>

        <div>
            <label>Size</label>
            @Html.DropDownListFor(m => m.SelectedSizeID, new SelectList(Model.Sizes, "SizeID", "SizeValue"), "-- Select Size --", new { @class = "form-control" })
        </div>

        <div>
            <label>Quantity</label>
            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    }

</body>
