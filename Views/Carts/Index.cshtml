@model LapTrinhWebBanHang.Models.Cart
@{
    ViewBag.Title = "Sign_in";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<h2>Giỏ hàng của bạn</h2>

@if (Model.Items.Count == 0)
{
    <p>Giỏ hàng của bạn đang trống.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Tổng</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td>@(item.Quantity * item.Price)</td>
                    <td>
                        @Html.ActionLink("Xóa", "RemoveFromCart", new { productId = item.ProductID })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Tổng tiền: </strong>@Model.Total</p>

    <form action="@Url.Action("Checkout")" method="get">
        <button type="submit" class="btn btn-primary">Tiến hành thanh toán</button>
    </form>
}
