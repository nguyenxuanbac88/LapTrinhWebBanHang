@model LapTrinhWebBanHang.Models.Cart
@{
    ViewBag.Title = "Sign_in";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<h2>Thông tin đơn hàng</h2>

@if (Model.Items.Count == 0)
{
    <p>Giỏ hàng của bạn trống, vui lòng thêm sản phẩm.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Tổng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td>@(item.Quantity * item.Price)</td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Tổng tiền: </strong>@Model.Total</p>

    <!-- Submit form to process payment -->
    <form action="@Url.Action("ConfirmOrder")" method="post">
        <button type="submit" class="btn btn-success">Xác nhận thanh toán</button>
    </form>
}
